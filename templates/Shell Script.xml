<templateSet group="Shell Script">
  <template name="bash-template" value="#!/usr/bin/env bash&#10;&#10;&lt;&lt;EOF&#10;&#10;EOF" description="bash scrip template" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="SHELL_SCRIPT" value="true" />
    </context>
  </template>
  <template name="bash-here-doc-file" value="sudo cat &gt; $FILENAME$ &lt;&lt;- 'EOF'&#10;$SELECTION$&#10;EOF" description="create file with contents" toReformat="false" toShortenFQNames="true">
    <variable name="FILENAME" expression="" defaultValue="FILENAME" alwaysStopAt="true" />
    <context>
      <option name="SHELL_SCRIPT" value="true" />
    </context>
  </template>
  <template name="bash-here-doc-var" value="VAR=$(cat &lt;&lt;- EOF&#10;$SELECTION$&#10;EOF)" description="create file with contents" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="SHELL_SCRIPT" value="true" />
    </context>
  </template>
</templateSet>